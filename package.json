{
    "name": "fvtt-translator",
    "version": "1.2.1",
    "main": "./out/main/index.js",
    "author": "Ezith",
    "description": "FVTT Translator Tool",
    "scripts": {
        "dev": "electron-vite dev",
        "build": "electron-vite build",
        "package": "electron-builder",
        "preview": "electron-vite preview"
    },
    "dependencies": {
        "@babel/parser": "latest",
        "@electron-toolkit/preload": "latest",
        "@electron-toolkit/utils": "latest",
        "@react-three/drei": "^9.96.1",
        "@react-three/fiber": "^8.15.12",
        "@types/canvas-confetti": "^1.9.0",
        "@types/three": "^0.160.0",
        "adm-zip": "^0.5.16",
        "canvas-confetti": "^1.9.4",
        "electron-updater": "^6.7.3",
        "framer-motion": "^12.26.2",
        "lucide-react": "latest",
        "magic-string": "latest",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "three": "^0.160.0",
        "zustand": "^5.0.10"
    },
    "devDependencies": {
        "@electron-toolkit/tsconfig": "latest",
        "@types/adm-zip": "^0.5.7",
        "@types/node": "^18.0.0",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@vitejs/plugin-react": "latest",
        "autoprefixer": "^10.4.16",
        "electron": "latest",
        "electron-builder": "^24.9.1",
        "electron-vite": "latest",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.0.0",
        "vite": "latest"
    },
    "build": {
        "appId": "com.ezith.fvtt-translator",
        "productName": "FVTT Translator",
        "copyright": "Copyright Â© 2026 Ezith",
        "directories": {
            "output": "dist"
        },
        "files": [
            "out/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "zip",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "artifactName": "${productName}-Setup-${version}.${ext}"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "shortcutName": "FVTT Translator"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "EzithiStar",
                "repo": "fvtt-translator"
            }
        ]
    }
}